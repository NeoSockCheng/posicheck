{
    "extends": "./tsconfig.app.json",
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "moduleResolution": "node",
        "types": [
            "jest",
            "@testing-library/jest-dom",
            "node"
        ],
        "isolatedModules": false,
        "verbatimModuleSyntax": false,
        "skipLibCheck": true
    },
    "include": [
        "src/**/__tests__/**/*",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "jest.setup.ts",
        "src/types/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "out"
    ]
}