{
    "compilerOptions": {
        // always save to true to ensure strict types like null safety
        "strict": true,
        // use import export instead of require
        "target": "ESNext",
        "module": "NodeNext",
        // dir to put generated js files
        "outDir": "../../dist-electron",
        // ignore errors from dependencies
        "skipLibCheck": true,
        "types": ["../types/globalType"],
        "baseUrl": "./",
        "paths": {
            "services/*": ["../services/*"]
        },
        "moduleResolution": "NodeNext"
    },
    "include": ["./**/*", "../services/**/*"]
}